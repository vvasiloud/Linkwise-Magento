<?xml version="1.0"?>
<config>
    <sections>
        <linkwise translate="label" module="linkwise">
            <label>Linkwise</label>
            <tab>vvasiloud</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <linkwise_id translate="label">
                            <label>Linkwise ID</label>
                            <frontend_type>text</frontend_type>
							<comment>Program ID as given by Linkwise</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </linkwise_id>
                        <decimal_separator translate="label">
                            <label>Decimal separator</label>
                            <frontend_type>text</frontend_type>
							<comment>i.e. , or .</comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </decimal_separator>	
                        <numeric_currency translate="label">
                            <label>Numeric_currency</label>
                            <frontend_type>text</frontend_type>
							<comment>Numeric currency code, e.g. 978 for Euro</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </numeric_currency>					
						<retargeting_pages translate="label">
							<label>Enabled retargeting on selected pages</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>Vvasiloud_Linkwise_Model_Adminhtml_System_Config_Source_Pages</source_model>
							<comment>Retargeting on header and order checkout is always enabled by default</comment>
							<sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</retargeting_pages>						
                    </fields>
                </general>
            </groups>
        </linkwise>
    </sections>
</config>